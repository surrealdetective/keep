
<div class="header">
	<center><%= image_tag "logo.png", :class => "img-responsive" %></center>
</div>

<h1>I am interested in</h1>
<h1>I live</h1>

<div class="row">
	<div class="col-md-4">
		News/Community
	</div>

	<div class="col-md-4">
		Opportunities
	</div>

	<div class="col-md-4">
		Ideas

		<ul>
			<% @ideas.each do |idea| %>
