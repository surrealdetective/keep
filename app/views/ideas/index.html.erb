
<div class="header">
	<center><%= image_tag "logo.png", :class => "img-responsive" %></center>
</div>
<br><br>

<% if user_signed_in? %>
<h3>Welcome back <%= current_user.email %>.</h3>
<p>Ready to make a difference?</p>
<br>
	<div class="row">
		<div class="col-md-offset-1 col-md-10">

			<h4>Recent ideas based on your interests</h4>
		</div>
	</div>

	<div class="row">
		<div class="col-md-offset-2 col-md-10">
			<h6><%= @rand.title %></h6>
			<p><%= @rand.description %></p>
			<p class="beneath">This project is taking place in <%= @rand.location %></p>
		</div>
	</div>
	<div class="row red cf">
		<div class="col-md-offset-1 col-md-9">
			<h4><%= rand_question %></h4>
			<input type="text" value="" class="form-control">
		</div>
	<div class="row">
		<div class="col-md-6 floater">
			<button class="btn btn-md btn-primary">Contribute</button>

			<button class="btn btn-md btn-inverse">Dig Deeper</button>
			<button class="btn btn-md btn-warning">Next Project</button>
		</div>

	</div>
</div>

<br><br>
<% end %>

	<div class="row">
			<div class=" col-md-6">
				<h2>I'm interested in </h2>
				    <select name="herolist" value="interested_in" class="select-block">
	            <option value="0">Social Service</option>
	            <option value="1">Chemistry</option>
	            <option value="2">Photography</option>
	            <option value="3">Theater</option>
	            <option value="STW" selected="selected">Saving the World</option>
	            <option value="5">Environmental Protection</option>
	          </select>
	        </div>



			<div class=" col-md-6">
				<h2>I live </h2>

				<input type="text" value="Zipcode" class="form-control large">
			</div>
		</div>


<br><br>



<div class="row">
	<div class="col-md-6">
		<h4>Idea Sparks</h4>
		NEWS
	</div>


	<div class="col-md-6">
		<h4>Projects</h4>

		<ul>
			<% @ideas.each do |idea| %>
				<li><%= link_to idea.title, idea %>
					<p><%= idea.description %></p>
					<p><%= idea.location %></p>
				</li>
			<% end %>
		</ul>

	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<h4>No Project Too Small</h4>

		<%= render "form" %>
	</div>
</div>


