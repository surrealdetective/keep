<div class="header">
	<center><%= image_tag "logo.png", :class => "img-responsive" %></center>
</div>
<br><br><br><br>

	<div class="row">
			<div class=" col-md-6">
				<h2>I'm interested in </h2>
				    <select name="herolist" value="interested_in" class="select-block">
	            <option value="0">Social Service</option>
	            <option value="1">Chemistry</option>
	            <option value="2">Photography</option>
	            <option value="3">Theater</option>
	            <option value="STW" selected="selected">Saving the World</option>
	            <option value="5">Environmental Protection</option>
	          </select>
	        </div>



			<div class=" col-md-6">
				<h2>I live </h2>

				<input type="text" value="Zipcode" class="form-control large">
			</div>
		</div>


<br><br>



<div class="row">
	<div class="col-md-6">
		<h4>Idea Sparks</h4>
		<div id="testimonies">

		</div>
	</div>


	<div class="col-md-6">
		<h4>Projects</h4>

		<ul>
			<% @ideas.each do |idea| %>
				<h6 class="bold"><%= link_to idea.title, idea %></h6>
					<ul><p><%= idea.description %></p>
					<p class="beneath">This idea is taking place <%= idea.location %></p>
				</ul>
			<% end %>
		</ul>

	</div>
</div>

<div class="row">
	<div class="col-md-6">
		<h4>No Idea Too Small</h4>

		<%= render "form" %>
	</div>
</div>


