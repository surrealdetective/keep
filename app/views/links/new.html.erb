<%= form_for [@idea, @link] do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
